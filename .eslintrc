{
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "jsx": true
    },
    "extends": [
        "standard",
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "globals": {
        "document": true
    },
    "plugins": [
        "filenames"
    ],
    "rules": {
        "filenames/match-exported": [2, "pascal"]        
    }
  }